{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./modules/**/*.ts",
    "./modules/**/*.d.ts",
    "./modules/**/*.tsx",
    "./modules/**/*.vue",
    "./components/**/*.vue",
    "./components/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
